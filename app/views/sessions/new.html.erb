<h3>Login</h3>
<div>
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div>
            <%= f.label :email, 'Email' %>
            <%= f.email_field :email %>
        </div>
        <div>
            <%= f.label :password, 'Password' %>
            <%= f.password_field :password %>
        </div>
        
        <%= f.submit 'Login' %>
    <% end %>
    
    <p>New user? <%= link_to 'Signup now!', signup_path %></p>
</div>