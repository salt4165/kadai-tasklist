<% if logged_in? %>
    <h1>タスク一覧</h1>
    
    <ul>
    <% @tasks.each do |task| %>
        <li>
                <p><%= task.content %>:<%= link_to task.status, task %></p>
        </li>
    <% end %>
    </ul>
    <%= link_to 'タスクの新規作成', new_task_path %>
    <%= link_to 'Logout', logout_path, method: :delete %>
<% else %>
    <h1>Tasklist</h1>
    
    <%= link_to 'Signup', signup_path %>
    
    <%= link_to 'Login', login_path %>
<% end %>